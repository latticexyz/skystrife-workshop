{
  "name": "contracts",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "pnpm run build:mud && pnpm run build:abi && pnpm run build:abi-ts",
    "build:abi": "forge build",
    "build:abi-ts": "mud abi-ts",
    "build:mud": "rimraf src/codegen && mud tablegen && mud worldgen",
    "deploy:redstone": "pnpm run build && mud deploy --profile=redstone --worldAddress 0x6e9474e9c83676b9a71133ff96db43e7aa0a4342 --alwaysRunPostDeploy",
    "lint": "pnpm run prettier && pnpm run solhint",
    "prettier": "prettier --write 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix"
  },
  "dependencies": {
    "@latticexyz/cli": "2.0.0-main-2b3c9481",
    "@latticexyz/schema-type": "2.0.0-main-2b3c9481",
    "@latticexyz/store": "2.0.0-main-2b3c9481",
    "@latticexyz/world": "2.0.0-main-2b3c9481",
    "@latticexyz/world-modules": "2.0.0-main-2b3c9481",
    "contracts-skystrife": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#74cfb77e308dd188d2f58864aaf44963ae6b88b1",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-config-mud": "2.0.0-main-2b3c9481",
    "solhint-plugin-mud": "2.0.0-main-2b3c9481"
  }
}
